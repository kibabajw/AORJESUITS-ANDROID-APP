<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="paragraphText">
        <item name="android:lineSpacingExtra">@dimen/fab_margin</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="paragraphItalicText">
        <item name="android:lineSpacingExtra">@dimen/fab_margin</item>
        <item name="android:fontFamily">@font/librebaskervilleitalicbold</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="boldanditalics">
        <item name="android:lineSpacingExtra">@dimen/fab_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/librebaskervilleitalicbold</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="joinuspara">
        <item name="android:lineSpacingExtra">@dimen/fab_margin</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="notesToChapterStyle">
        <item name="android:lineSpacingExtra">@dimen/fab_margin</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="documentTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/robotomedium</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:lineSpacingExtra">@dimen/fab_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="paragraphFooter">
        <item name="android:lineSpacingExtra">@dimen/fab_margin</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="letterHeads">
        <item name="android:layout_margin">15dp</item>
        <item name="android:textColor">@color/maroon</item>
        <item name="android:textSize">70sp</item>
        <item name="fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="jargonbigblackTerm">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="jargonmaroonTerm">
        <item name="android:textColor">@color/maroon</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginLeft">15dp</item>

    </style>

    <style name="aboutusparagraphText">
        <item name="android:lineSpacingExtra">@dimen/fab_margin</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="paragraphBold">
        <item name="android:lineSpacingExtra">@dimen/fab_margin</item>
        <item name="android:fontFamily">@font/creteroundregular</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="paragraphBoldNoMargin">
        <item name="android:lineSpacingExtra">@dimen/fab_margin</item>
        <item name="android:fontFamily">@font/creteroundregular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">2dp</item>
    </style>

</resources>