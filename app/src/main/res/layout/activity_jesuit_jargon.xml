<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/jesuitjargondrawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book2"
    tools:context=".jesuitjargon.JesuitJargonActivity">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearJesuitJargon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:alpha="0.7">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/jesuitjargontoolbar"
            android:elevation="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragscontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/jesuitjargonnavList"
        android:layout_gravity="left|start"
        android:background="@color/white"
        android:divider="@color/dividerColor"
        android:dividerHeight="1dp"
        android:indicatorRight="?android:attr/expandableListPreferredItemIndicatorRight"
        android:layout_width="235dp"
        android:layout_height="match_parent">

    </ExpandableListView>

</androidx.drawerlayout.widget.DrawerLayout>