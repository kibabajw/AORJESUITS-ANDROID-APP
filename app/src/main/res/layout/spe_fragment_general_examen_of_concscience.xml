<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/spe_title_one"
            style="@style/documentTitle"
            android:text="GENERAL EXAMEN OF CONSCIENCE"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:id="@+id/spe_title_two"
            android:layout_below="@+id/spe_title_one"
            android:text="TO PURIFY ONESELF AND TO MAKE ONEâ€™S CONFESSION BETTER"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/txt_content1"
            android:layout_below="@+id/spe_title_two"
            style="@style/paragraphText"
            android:text="@string/spe_gen_examen_of_conscience_content_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/spe_title_three"
            android:layout_below="@+id/txt_content1"
            android:text="THOUGHT"
            style="@style/documentTitle"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/txt_content2"
            android:layout_below="@+id/spe_title_three"
            style="@style/paragraphText"
            android:text="@string/spe_gen_examen_of_conscience_content_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/spe_title_four"
            android:layout_below="@+id/txt_content2"
            style="@style/documentTitle"
            android:text="WORD"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/txt_content3"
            android:layout_below="@+id/spe_title_four"
            style="@style/paragraphText"
            android:text="@string/spe_gen_examen_of_conscience_content_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/spe_title_five"
            android:layout_below="@+id/txt_content3"
            android:text="ACT"
            style="@style/documentTitle"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/txt_content4"
            android:layout_below="@+id/spe_title_five"
            android:text="@string/spe_gen_examen_of_conscience_content_four"
            style="@style/paragraphText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/spe_title_six"
            android:layout_below="@+id/txt_content4"
            android:text="METHOD FOR MAKING THE GENERAL EXAMEN"
            style="@style/documentTitle"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/txt_content5"
            android:layout_below="@+id/spe_title_six"
            android:text="@string/spe_gen_examen_of_conscience_content_five"
            style="@style/paragraphText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <ImageView
            android:src="@drawable/logo"
            android:layout_below="@+id/txt_content5"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </RelativeLayout>


</androidx.core.widget.NestedScrollView>