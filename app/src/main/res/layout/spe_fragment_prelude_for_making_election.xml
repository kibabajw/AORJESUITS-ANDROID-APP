            android:lineSpacingExtra="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
        <com.codesgood.views.JustifiedTextView
            android:id="@+id/txt_content4"
            android:layout_below="@+id/spe_sub_title4"
            android:text="@string/spe_prelude_for_making_election_content4"
            style="@style/paragraphText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/logo"
            android:layout_below="@+id/txt_content4"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>