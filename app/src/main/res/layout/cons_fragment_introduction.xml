<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">
        <TextView
            android:text="The Constitutions of the Society of Jesus"
            android:textSize="24sp"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="and Their Complementary Norms"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="A Complete English Translation of the Official Latin Texts"
            android:layout_marginTop="40dp"
            android:textSize="22sp"
            android:fontFamily="@font/librebaskervilleitalicbold"
            android:textColor="@color/black"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="THE INSTITUTE OF JESUIT SOURCES\n SAINT LOUIS ,1996"
            android:layout_marginTop="60dp"
            android:textSize="20sp"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>