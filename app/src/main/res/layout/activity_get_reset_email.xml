<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adusum.GetResetEmailActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:text="FOR AOR JESUITS ONLY"
            style="@style/paragraphBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <EditText
            android:id="@+id/get_reset_email_edt_email"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:gravity="center"
            android:textColor="@color/black"
            android:textColorHint="#666666"
            android:textSize="20sp"
            android:hint="Enter email-address"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/get_reset_email_btn_enter"
            android:text="ENTER"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/learnmore"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_margin="10dp"/>
    </LinearLayout>

</RelativeLayout>