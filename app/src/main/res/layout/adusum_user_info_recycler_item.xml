<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linearlayout_click_to_hide_show_user_data"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray"
        android:orientation="horizontal"
        android:padding="5dp">
        <ImageView
            android:src="@drawable/avatar"
            android:layout_gravity="center_vertical"
            android:layout_width="34dp"
            android:layout_height="34dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:text="Personal details"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/img_button_toggle_user_data"
            android:background="?attr/selectableItemBackground"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_down" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_wrap_user_data"
        android:padding="2.5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="2dp"
        android:background="#eeeeee"/>
    <TextView
        android:id="@+id/adusum_brother_info_list_item_info_data"
        android:text=""
        android:fontFamily="@font/robotomedium"
        android:textColor="#333333"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/adusum_list_title_username"
        android:text="username"
        android:fontFamily="@font/opensansregular"
        android:textColor="#444"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#eeeeee"/>
    <TextView
        android:id="@+id/adusum_list_item_fullname"
        android:text=""
        android:fontFamily="@font/robotomedium"
        android:textColor="#333333"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/adusum_list_title_fullname"
        android:text="Fullname"
        android:fontFamily="@font/opensansregular"
        android:textColor="#444"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#eeeeee"/>

    <TextView
        android:id="@+id/adusum_list_item_date_of_birth"
        android:text=""
        android:fontFamily="@font/robotomedium"
        android:textColor="#333333"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/adusum_list_title_date_of_birth"
        android:text="Date of birth"
        android:fontFamily="@font/opensansregular"
        android:textColor="#444"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#eeeeee"/>

    <TextView
        android:id="@+id/adusum_list_item_date_of_entry"
        android:text=""
        android:fontFamily="@font/robotomedium"
        android:textColor="#333333"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/adusum_list_title_date_of_entry"
        android:text="Date of entry"
        android:fontFamily="@font/opensansregular"
        android:textColor="#444"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#eeeeee"/>
    <TextView
        android:id="@+id/tVadusumaccountNameofprovincial"
        android:text=""
        android:fontFamily="@font/robotomedium"
        android:textColor="#333333"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/adusum_list_title_name_of_provincial"
        android:text="Name of current provincial"
        android:fontFamily="@font/opensansregular"
        android:textColor="#444"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#eeeeee"/>
    <TextView
        android:id="@+id/tVadusumaccountCurrentcommunity"
        android:text=""
        android:fontFamily="@font/robotomedium"
        android:textColor="#333333"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/adusum_list_title_current_community"
        android:text="Current community"
        android:fontFamily="@font/opensansregular"
        android:textColor="#444"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="?android:attr/listDivider"/>
    </LinearLayout>
</LinearLayout>