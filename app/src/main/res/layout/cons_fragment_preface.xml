<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:text="PREFACE"
            style="@style/documentTitle"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="of"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Very Reverend Peter-Hans Kolvenbach,\n Superior General of the Society of Jesus"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.codesgood.views.JustifiedTextView
            android:text="@string/str_cons_preface"
            style="@style/paragraphText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Peter-Hans Kolvenbach, S.J.\n Superior General of the Society of Jesus"
            android:textSize="20sp"
            android:gravity="right"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Rome, September 27, 1995\n On the 455th anniversary of the papal approval of the Society of Jesus"
            android:textSize="20sp"
            android:gravity="left"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>