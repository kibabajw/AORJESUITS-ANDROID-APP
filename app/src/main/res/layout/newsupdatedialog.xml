<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
    android:layout_height="80dp"
    android:elevation="20dp"
    android:padding="5dp"
    android:background="@drawable/setupdialogbackground">

    <com.airbnb.lottie.LottieAnimationView
        app:lottie_rawRes="@raw/animationloadingblue"
        android:id="@+id/lottieView_in_setup_dialog"
        android:layout_height="80dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_width="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_heading"
        android:text="Updating News"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="15dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/lottieView_in_setup_dialog"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_body_1"
        android:text="Checking for new items."
        android:textColor="#666"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="19sp"
        android:textStyle="normal"
        android:lineSpacingMultiplier="1.26"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/lottieView_in_setup_dialog"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_heading"/>

</androidx.constraintlayout.widget.ConstraintLayout>