<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:text="@string/str_cons_formula_of_the_institute_header"
            style="@style/documentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="PAUL III"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.codesgood.views.JustifiedTextView
            android:text="@string/str_cons_formula_of_the_institute_cont_1"
            android:padding="5dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:fontFamily="@font/librebaskervilleitalicbold"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.codesgood.views.JustifiedTextView
            android:text="@string/str_cons_formula_of_the_institute_cont_2"
            style="@style/paragraphText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>