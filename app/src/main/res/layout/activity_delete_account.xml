<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adusum.DeleteAccountActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_delete_account"
        android:background="@color/white"
        app:titleTextColor="@color/black"
        app:title="Account Deletion"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Clicking the button will cause your account and therefore accompanying data to be deleted permanently. This action once taken cannot be reversed."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:lineHeight="25sp"
        android:layout_marginTop="80dp"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/button_delete_account"
        android:text="Delete my account data"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/maroon"
        android:layout_width="320dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>