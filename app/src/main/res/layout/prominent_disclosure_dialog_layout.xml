<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="18dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_view_prominent_disclosure"
        android:src="@drawable/logo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/txt_view_prominent_disclosure"
        android:text="Prominent Disclosure"
        android:layout_marginLeft="9dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_view_prominent_disclosure"/>

    <TextView
        android:id="@+id/prominent_disclosure_paragraph"
        android:text="@string/prominentdiscloreparagraph"
        android:gravity="left"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/img_view_prominent_disclosure"/>

    <Button
        android:id="@+id/btn_prominent_disclosure_positive"
        android:text="ALLOW"
        android:textColor="@color/white"
        android:background="#1a9bcb"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/prominent_disclosure_paragraph"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btn_prominent_disclosure_negative"
        android:text="DENY"
        android:textColor="@color/white"
        android:background="@color/red"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/prominent_disclosure_paragraph"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>