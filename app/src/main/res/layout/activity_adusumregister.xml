<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".adusum.AdusumregisterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarAccount"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            app:popupTheme="@style/PopupOverlay" />
    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="FOR AOR JESUITS ONLY"
            style="@style/paragraphBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <com.google.android.material.textfield.TextInputLayout
            app:hintEnabled="false"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            android:id="@+id/inputLayoutemail"
            app:hintTextColor="@color/black"
            app:errorTextColor="@color/red"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_adusum_register_email"
                android:hint="Email address"
                android:inputType="textEmailAddress"
                android:layout_centerHorizontal="true"
                style="@style/signup_input_style"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintEnabled="false"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            android:id="@+id/inputLayoutusername"
            app:hintTextColor="@color/black"
            app:errorTextColor="@color/red"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_adusum_register_username"
                android:hint="Username"
                android:inputType="textPersonName"
                android:layout_centerHorizontal="true"
                style="@style/signup_input_style"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintEnabled="false"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            android:id="@+id/inputLayoutFullname"
            android:layout_marginTop="20dp"
            app:hintTextColor="@color/black"
            app:errorTextColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_adusum_register_fullname"
                android:layout_below="@+id/edit_adusum_register_username"
                android:hint="Fullname as appears in catalogue"
                android:inputType="textPersonName"
                android:layout_centerHorizontal="true"
                style="@style/signup_input_style" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            app:hintEnabled="false"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            android:id="@+id/inputLayoutDateofbirth"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            app:hintTextColor="@color/black"
            app:errorTextColor="@color/red"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_adusum_register_date_of_birth"
                android:hint="Date of birth"
                android:layout_below="@+id/edit_adusum_register_fullname"
                android:inputType="date"
                android:layout_centerHorizontal="true"
                style="@style/signup_input_style"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintEnabled="false"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            android:id="@+id/inputLayoutDateofentry"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            app:hintTextColor="@color/black"
            app:errorTextColor="@color/red"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_adusum_register_date_of_entry"
                android:layout_below="@+id/edit_adusum_register_date_of_birth"
                android:hint="In SJ Date of entry"
                android:inputType="date"
                android:layout_centerHorizontal="true"
                style="@style/signup_input_style"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintEnabled="false"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            android:id="@+id/inputLayoutNameofyourprovincial"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextColor="@color/red"
            app:hintTextColor="@color/black">
            <EditText
                android:id="@+id/edit_adusum_register_name_of_provincial"
                android:hint="Current provincial"
                android:inputType="text"
                android:layout_centerHorizontal="true"
                style="@style/signup_input_style"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintEnabled="false"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            android:id="@+id/inputLayoutCurrentcommunity"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextColor="@color/red"
            app:hintTextColor="@color/black">
            <EditText
                android:id="@+id/edit_adusum_register_current_community"
                android:layout_below="@+id/edit_adusum_register_name_of_provincial"
                android:hint="Current community"
                android:inputType="text"
                android:layout_centerHorizontal="true"
                style="@style/signup_input_style"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintEnabled="false"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            android:id="@+id/inputLayoutPassword"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextColor="@color/red"
            app:hintTextColor="@color/black">
            <EditText
                android:id="@+id/edit_adusum_register_password"
                android:hint="Password"
                android:layout_below="@+id/edit_adusum_register_current_community"
                android:inputType="textPassword"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                style="@style/signup_input_style"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btn_adusum_register_enter"
            android:text="ENTER"
            android:gravity="center"
            android:layout_width="@dimen/signup_input_width"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bgcornermaroon"
            android:textColor="@color/white"
            android:padding="15dp"
            android:textSize="19sp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/adusumlinklogin"
               android:layout_marginTop="10dp"
               android:textColor="@color/black"
               android:fontFamily="@font/robotomedium"
               android:text="Login"
               android:gravity="left"
               android:textSize="18sp"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/adusumResetPasswordlink"
               android:layout_marginTop="10dp"
               android:textColor="@color/black"
               android:fontFamily="@font/robotomedium"
               android:text="Reset password"
               android:gravity="right"
               android:textSize="18sp"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"/>
       </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>